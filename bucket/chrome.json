{
    "version": "135.0.7049.115",
    "description": "Fast, secure, and free web browser, built for the modern web.",
    "homepage": "https://www.google.com/chrome/",
    "depends": [
        "PrivateBucket/chromeplus",
        "PrivateBucket/syspin"
    ],
    "license": {
        "identifier": "Freeware",
        "url": "https://www.google.com/chrome/privacy/eula_text.html"
    },
    "architecture": {
        "64bit": {
            "url": "https://dl.google.com/release2/chrome/ackxpvrm3yhql4zsr7kcxuakkwkq_135.0.7049.115/135.0.7049.115_chrome_installer.exe#/dl.7z",
            "hash": "7982123ecd1b901b2fef14c1b88f014f5f075c7e1e17f57af2f5f5f84ab660c3"
        },
        "32bit": {
            "url": "https://dl.google.com/release2/chrome/gj7jf7wozxi2m7tnru4fhkrfwy_135.0.7049.115/135.0.7049.115_chrome_installer.exe#/dl.7z",
            "hash": "a3c9afc839824ce6841878c9ac4bb94199fd10903105cbcb7eb426569c773c56"
        }
    },
    "installer": {
        "script": "Expand-7zipArchive \"$dir\\chrome.7z\" -ExtractDir 'Chrome-bin' -Removal"
    },
    "bin": [
        [
            "chrome.exe",
            "chrome",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "shortcuts": [
        [
            "chrome.exe",
            "Google Chrome",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "post_install": [
        "$chromeplus_dir = $(scoop prefix chromeplus)",
        "if (Test-Path $chromeplus_dir) {",
        "    Copy-Item \"$chromeplus_dir\\App\\version.dll\" \"$dir\"",
        "    Copy-Item \"$chromeplus_dir\\App\\chrome++.ini\" \"$dir\"",
        "}",
        "$chrome_shortcut = \"$env:APPDATA\\Microsoft\\Internet Explorer\\Quick Launch\\User Pinned\\TaskBar\\Google Chrome.lnk\"",
        "echo $chrome_shortcut",
        "if (Test-Path $chrome_shortcut) {",
        "    $shortcut = (New-Object -ComObject WScript.Shell).CreateShortcut($chrome_shortcut)",
        "    $shortcut.TargetPath = \"$original_dir\\chrome.exe\"",
        "    $shortcut.WorkingDirectory = \"$original_dir\"",
        "    $shortcut.Save()",
        "} else {",
        "    syspin \"$original_dir\\chrome.exe\" 5386",
        "}"
    ],
    "env_set": {
        "CHROME_EXECUTABLE": "$dir\\chrome.exe"
    },
    "persist": [
        "User Data",
        "User Cache"
    ],
    "checkver": {
        "url": "https://scoopinstaller.github.io/UpdateTracker/googlechrome/chrome.min.xml",
        "regex": "(?sm)<stable32><version>(?<version>[\\d.]+)</version>.+release2/chrome/(?<32>[\\w-]+)_.+<stable64>.+release2/chrome/(?<64>[\\w-]+)_.+</stable64>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://dl.google.com/release2/chrome/$match64_$version/$version_chrome_installer.exe#/dl.7z",
                "hash": {
                    "url": "https://scoopinstaller.github.io/UpdateTracker/googlechrome/chrome.min.xml",
                    "xpath": "/chromechecker/stable64[version='$version']/sha256"
                }
            },
            "32bit": {
                "url": "https://dl.google.com/release2/chrome/$match32_$version/$version_chrome_installer.exe#/dl.7z",
                "hash": {
                    "url": "https://scoopinstaller.github.io/UpdateTracker/googlechrome/chrome.min.xml",
                    "xpath": "/chromechecker/stable32[version='$version']/sha256"
                }
            }
        }
    }
}
