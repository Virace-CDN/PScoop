{
    "version": "1.6.0",
    "homepage": "https://developer.wordpress.com/studio",
    "description": "A fast, free way to develop locally with WordPress.",
    "license": "Freeware",
    "architecture": {
        "64bit": {
            "url": "https://cdn.a8c-ci.services/studio/studio-win32-v1.6.0.exe#/dl.7z",
            "hash": "de43aaa23bb1ee15e85c733ca7d47cb863adf347c0db75c8bcb589496c49657e"
        }
    },
    "pre_install": [
        "Get-ChildItem \"$dir\\*\" -Exclude 'studio-*-full.nupkg' | Remove-Item",
        "Expand-7zipArchive \"$dir\\studio-*-full.nupkg\" -ExtractDir 'lib\\net45' -Removal"
    ],
    "installer": {
        "script": [
            "Import-Module \"$bucketsdir\\pscoop\\scripts\\Utils.psm1\"",
            "Mount-ExternalRuntimeData -Source \"$persist_dir\\AppData\" -Target \"$env:APPDATA\\Studio\"",
            "Remove-Module -Name Utils"
        ]
    },
    "shortcuts": [
        [
            "Studio.exe",
            "WordPress Studio"
        ]
    ],
    "checkver": {
        "url": "https://developer.wordpress.com/studio",
        "regex": "studio-win32-v([\\d.]+).exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.a8c-ci.services/studio/studio-win32-v$version.exe#/dl.7z"
            }
        }
    }
}
